{
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(secrets.json)",
      "Read(id_rsa)",
      "Read(credentials.json)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/block-secrets.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/verify-no-secrets.sh"
          },
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/check-rulecatch.sh"
          }
        ]
      }
    ]
  }
}
